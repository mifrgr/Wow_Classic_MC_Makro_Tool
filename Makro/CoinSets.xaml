<Window x:Class="Raid_Tool.CoinSets"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Raid_Tool"
        mc:Ignorable="d"
        Title="CoinSets" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <DockPanel>
            <DataGrid Name="CoinsAvailable" IsReadOnly="False">
            </DataGrid>
        </DockPanel>
        <StackPanel Grid.Column="1">
            <DockPanel>
                <DataGrid Name="NeededCoins"></DataGrid>
            </DockPanel>
        </StackPanel>
        
        <StackPanel Grid.Column="1" Grid.Row="1">
            <Button Name="Import" Content="Auswerten" Width="150" Height="30" Margin="10" Click="Import_Click"></Button>
        </StackPanel>
        <StackPanel Grid.Row="1">
            <DataGrid Name="CoinSetss" IsReadOnly="False" CanUserAddRows="True" CanUserDeleteRows="True"></DataGrid>
        </StackPanel>
    </Grid>
</Window>
